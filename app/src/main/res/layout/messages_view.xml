<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:orientation="vertical"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:id="@+id/message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/message_round">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/date_message">
            <TextView
                android:id="@+id/text_message"
                android:visibility="gone"
                android:textSize="16sp"
                android:textColor="@color/text_message_color"
                android:text="KASDjn as d sadasd jasd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/voice_message"
                android:visibility="visible"
                android:orientation="horizontal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/play_message"
                    android:src="@drawable/ic_play"
                    android:padding="5dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginEnd="10dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content">
                    <SeekBar
                        android:id="@+id/slider_message"
                        android:min="0"
                        android:thumb="@drawable/thumb"
                        android:progressTint="@color/slider_active_color"
                        android:progressBackgroundTint="@color/slider_inactive_color"
                        android:thumbTint="@color/slider_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/duretion_message"
                        android:visibility="visible"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/bottom_icon_unselect_color"
                        android:textSize="12sp"
                        android:text="12:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/photo_message"
                android:visibility="gone"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="200dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/date_message"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"
            android:textColor="@color/bottom_icon_unselect_color"
            android:textSize="12sp"
            android:text="12:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>