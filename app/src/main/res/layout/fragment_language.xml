<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <az.needforspeak.component.LanguageItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:languagesTitle="AZ"
        app:languagesImage="@drawable/ic_flag_az"
        android:id="@+id/az"/>

    <az.needforspeak.component.LanguageItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:languagesTitle="EN"
        app:languagesImage="@drawable/ic_flag_en"
        android:id="@+id/en"/>

    <az.needforspeak.component.LanguageItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:languagesTitle="RU"
        app:languagesImage="@drawable/ic_flag_ru"
        android:id="@+id/ru"/>


</LinearLayout>